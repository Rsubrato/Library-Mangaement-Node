<%- include('partials/header'); -%>
<style>
  table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 60%;
		margin-left: auto;
  margin-right: auto;
		
    }
  
    td,
    th {
        border: 1px solid #b9b9b9;
        text-align: left;
        padding: 3px;
        background-color: antiquewhite;
    }

</style>
  <body>
      <h3>List of Books</h3>
  <table>
  <tr>
          <th>Book Name</th>
          <th>Book Author</th>
          <th>Pages</th>
          <th>Language</th>
      </tr>
      <% for(var i = 0; i < books.length; i++) { %>
      <tr>
          <td><%= books[i].title %></td>
          <td><%= books[i].author %></td>
          <td><%= books[i].pages %></td>
          <td><%= books[i].language %></td>
    </td>
      </tr>
      <% } %>
  
</table>
  </body>


