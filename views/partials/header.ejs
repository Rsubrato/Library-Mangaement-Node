  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav>
    <h1><a href="/">Library Management</a></h1>
    <ul>
      <% if (user) { %>
        <%if(user.role=='admin'){%>
          <li><a href="/admin/books">Books</a></li>
          <li><a href="/admin/users">Users</a></li>
        <%}%>
        <%if(user.role=='lecturer'){%>
          <li><a href="/lecturer/books">Books</a></li>
          <li><a href="/lecturer/approve">Approve</a></li>
        <%}%>
        <%if(user.role=='student'){%>
          <li><a href="/students/books">Books</a></li>
        <%}%>
        <li><a>Welcome ,<%= user.name%></a></li>
          <li><a href="/logout">Log out</a></li>
      <% } else { %>
        <li><a href="/login">Log in</a></li>
        <li><a href="/signup" class="btn">Sign up</a></li>
      <% } %>
    </ul>
  </nav>
  