<%- include('../partials/header.ejs')%>
<body>
     <h3>Update Books</h3>

     <form class="big" action="/admin/books/update/<%= books._id%>" method="Post">
         <label>Title</label>
         <input type="text" name="title" placeholder="Enter book Title" value="<%= books.title %>">        
         <label>Author</label>
         <input type="text" name="author" placeholder="Enter author name" value="<%= books.author %>">
         <br>
         <label>Number of books</label>
         <input type="number" name="pages" placeholder="Enter number of books" value="<%= books.pages%>">
         <br>
         <label>Language</label>
         <input type="text" name="language" placeholder="Language" value="<%= books.language %>">
         <br>
         <button class="submit">Save</button>
     </form>
      



