    <body>
        <h3>List of Users</h3>
		<table>
		<tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone number</th>
			<th>Gender</th>
            <th>Role</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        <% for(var i = 0; i < users.length; i++) { %>
        <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].phone_number %></td>
            <td><%= users[i].gender %></td>
            <td><%= users[i].role %></td>
			<td><a href="/admin/users/update/<%= users[i]._id %>"><button class="update" type="submit">Update</button></a></td>
			<td><a href="/admin/users/delete/<%= users[i]._id %>"><button class="update"  type="submit">Delete</button></a></td>
        </tr>
        <% } %>
		
	</table>
