<%- include('../partials/header.ejs')%>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 60%;
		margin-left: auto;
  margin-right: auto;
		
    }
  
    td,
    th {
        border: 1px solid #b9b9b9;
        text-align: left;
        padding: 3px;
        background-color: antiquewhite;
    }
  
</style>
    <body>
        <h3>Approval List</h3>
		<table>
		<tr>
            <th>Book Name</th>
            <th>Username</th>
            <th>Aprove</th>
            <th>Reject</th>
        </tr>
        
        <% for(var i = 0; i < mapping.length; i++) { %>
        <tr>
            <td><%= mapping[i].books.title %></td>
            <td><%= mapping[i].user.name %></td>
            <td>
                <form action="/lecturer/approve/<%=mapping[i].books._id%>" method="post">
				    <button class="update" type="submit">Approve</button>
                </form>
                
			</td>
            <td>
                <form action="/lecturer/reject/<%=mapping[i].books._id%>" method="post">
				    <button class="update" type="submit">Reject</button>
                </form>
        
			</td>
        </tr>
        <% } %>
		
	</table>
    <% include ('../partials/footer.ejs') %>